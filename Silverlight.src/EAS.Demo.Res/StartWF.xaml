<UserControl xmlns:my="clr-namespace:EAS.Demo.Res" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="EAS.Demo.Res.StartWF"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid x:Name="LayoutRoot" Background="White">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition Height="0.80*"/>
    	</Grid.RowDefinitions>
        <Viewbox x:Name="viewbox" Grid.Row="1">
            <my:FlowControl />
    	</Viewbox>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="0,5,0,5">
            <Span FontFamily="Comic Sans MS"  FontWeight="Bold"  FontSize="26" Foreground="Blue">
                <Run Text="AgileEAS.NET 敏捷软件开发平台开发流程"/></Span>
        </TextBlock>
    </Grid>
</UserControl>
